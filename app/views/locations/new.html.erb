          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for country -->
          <div class="form-group">
            <label for="country" class="col-sm-2 control-label">
              <strong>Country</strong>
            </label>
            <div class="col-sm-10">
              <input type="text" id="country" name="country" placeholder="Country" class="form-control" value="<%= @location.country %>">
            </div>
          </div>

          <!-- Label and input for position -->
